<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe1e1"
    android:id="@+id/fragmentContainer"
    tools:context="com.kmitl.danaya58070042.lazyinstagram.fragment.MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Choose an account"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="@android:color/black"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp"

            android:id="@+id/textView"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/android"

            android:layout_width="360dp"
            android:layout_height="90dp"
            android:text="android"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/natural"
            android:layout_width="360dp"
            android:layout_height="90dp"
            android:text="natural"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cartoon"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/cartoon"
            android:layout_width="360dp"
            android:layout_height="90dp"
            android:text="cartoon"

            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/android"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>



</FrameLayout>
